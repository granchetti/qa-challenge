{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["@playwright/test", "node"]
  },
  "include": ["src/**/**.ts"],
  "exclude": ["node_modules"]
}